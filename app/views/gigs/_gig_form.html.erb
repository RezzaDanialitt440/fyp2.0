<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDaMIwD-73f2_FuvWcAm0olLBYwMTkR9os&libraries=places"></script>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%= simple_form_for @gig do |f| %>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.input :name, placeholder: "What is job Title" class: "form-control"%>
          </div>
          <div class="form-group">
            <%= f.label :category_id %> 

            <%= f.select :category_id, options_from_collection_for_select(Category.all, :id, :name), {}, class: "form-control input-lg" %>
                      </div>
          <div class="form-group">
            <%= f.input :location, placeholder: "Where the job is located" class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.input :description, placeholder: "Briefly explain what the job is about", input_html: { row: 20 }, class: "form-control" %>
          </div>
          <legend>List Skills required for this job.</legend>
          <div class="form-group">
            <!-- <%= f.text_area :skill_list, rows: 3, class: "form-control" %> -->
            <%= f.select :skill_list, options_from_collection_for_select(Skill.all, :name, :name), {}, class: "form-control input-lg" %>
                      </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.input :budget,placeholder: "How much you willing to pay the worker", class: "form-control"%>
          </div>
          <%= f.submit "CREATE JOB",class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>